{
    "scripts": {
        "shadow-dev": "shadow-cljs -A:dev watch app",
        "shadow-release": "shadow-cljs -A:release release app",
        "jsx": "babel src/jsx -d gen",
        "watch-jsx": "babel src/jsx -d gen --watch",
        "postcss:watch": "cross-env TAILWIND_MODE=watch postcss src/css/tailwind.css -o ./public/css/main.css --verbose -w",
        "postcss:release": "cross-env NODE_ENV=production postcss src/css/tailwind.css -o ./public/css/main.css --verbose",
        "shadow:watch": "shadow-cljs watch app",
        "shadow:release": "shadow-cljs release app",
        "babel:watch": "babel src/jsx -d gen --watch",
        "babel:release": "babel src/jsx -d gen",
        "dev": "run-p -l *:watch",
        "release": "run-s *:release"
    },
    "dependencies": {
        "@headlessui/react": "^1.3.0",
        "@heroicons/react": "^1.0.3",
        "@tailwindcss/forms": "^0.3.3",
        "autoprefixer": "^10.3.1",
        "cssnano": "^5.0.7",
        "highlight.js": "10.7.1",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.3.6",
        "postcss-cli": "^8.3.1",
        "react": "^17.0.2",
        "react-beautiful-dnd": "^13.1.0",
        "react-dom": "^17.0.2",
        "slate": "^0.63.0",
        "slate-react": "^0.65.0",
        "tailwindcss": "npm:@tailwindcss/postcss7-compat"
    },
    "devDependencies": {
        "@babel/cli": "^7.14.8",
        "@babel/core": "^7.14.8",
        "@babel/plugin-syntax-jsx": "^7.14.5",
        "@babel/plugin-transform-react-jsx": "^7.14.5",
        "@babel/preset-env": "^7.14.8",
        "@babel/preset-react": "^7.14.5",
        "cross-env": "^7.0.3",
        "shadow-cljs": "^2.14.2"
    }
}
